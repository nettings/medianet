[Unit]
Description=zita JACK-to-ALSA bridge
BindsTo=jackd.target
After=jackd.target
BindsTo=sound.target
After=sound.target

[Service]
EnvironmentFile=-/medianet/config/this/medianet.conf
User=medianet
LimitRTPRIO=85
LimitMEMLOCK=700000
ExecStartPre=/usr/local/bin/mn_jackwait $ZITA_J2A_WAITPORT
ExecStart=/usr/bin/zita-j2a $ZITA_J2A_OPTIONS
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target

