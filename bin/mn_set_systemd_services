#!/bin/bash

BASEDIR=`dirname $0`
. "$BASEDIR"/mn_includes

. "$MEDIANETCONF"


for i in $SYSTEMD_ENABLE; do
  echo -n "Enabling $i... "
  sudo systemctl enable "$i" && success || failure
done

for i in $SYSTEMD_DISABLE; do
  echo -n "Stopping  $i... "
  sudo systemctl stop "$i" && success || failure
  echo -n "Disabling $i... "
  sudo systemctl disable "$i" && success || failure
done

