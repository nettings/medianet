#!/bin/bash

BASEDIR=`dirname $0`/..
. "$BASEDIR"/bin/mn_includes


CONF="medianet.txt"


echo -n "Checking for $CONF..."
if [[ ! -f /boot/"$CONF" ]] ; then
  echo -n " not found. Installing..."
  sudo cp /medianet/config/this/$CONF /boot || failure && success
else
  echo " found."
fi

echo -n "Checking if $CONF is included from config.txt..."
LINE="include $CONF"
if ! grep "$LINE" /boot/config.txt > /dev/null ; then
  echo -n " no. Including..."
  sudo bash -c "echo $LINE >> /boot/config.txt" || failure && success
else
  echo " yes."
fi


  