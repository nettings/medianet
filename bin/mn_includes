BASEDIR=`realpath "$BASEDIR"`

function scream {

  echo
  echo -e "\033[1;1m$1\033[0m"

}


function success {

  echo  -e " \033[1;32msucceeded.\033[0m"

}


function failure {

  echo  -e " \033[1;31mfailed with return code $?.\033[0m"

}


function bail {

  failure
  echo -e "\033[1;31mExiting.\033[0m"

  exit 1
}