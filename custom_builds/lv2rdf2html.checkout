from_git https://github.com/nettings/lv2rdf2html.git lv2rdf2html
from_package xsltproc raptor-utils
cat << EOF > lv2rdf2html/lv2rdf.conf
# medianet deployment settings
BUILDDIR=./build
MODHOSTCONF=/etc/mod-host.conf
MODHOSTHOST=localhost
MODHOSTPORT=5555
SAMPLERATE=48000
WEBGUIROOT=/var/www/html/
WEBGUIURI=lv2rdf.html
DOWNLOADJQUERY=true
JSURI=lv2rdf.js
CSSURI=lv2rdf.css
AJAXROOT=/var/www/html
AJAXURI=lv2rdf.php
XSLDIR=./xslt
DESTDIR=/medianet/overlay
EOF
